@model cuoiki.Models.Product

@{
    ViewData["Title"] = "Product Detail";
}

<h2>Product Detail</h2>

@if (Model != null)
{
    <div>
        <dl class="row">
            <dt class="col-sm-2">Product ID</dt>
            <dd class="col-sm-10">@Model.ProductId</dd>

            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@Model.NamePro</dd>

            <dt class="col-sm-2">Description</dt>
            <dd class="col-sm-10">@Model.DecriptionPro</dd>

            <dt class="col-sm-2">Category</dt>
            <dd class="col-sm-10">@Model.Category</dd>

            <dt class="col-sm-2">Price</dt>
            <dd class="col-sm-10">@Model.Price</dd>

            <dt class="col-sm-2">Image</dt>
            <dd class="col-sm-10">
                @if (!string.IsNullOrEmpty(Model.ImagePro))
                {
                    <img src="@Model.ImagePro" alt="Product Image" style="max-width:200px;" />
                }
                else
                {
                    <span>No image</span>
                }
            </dd>

            <dt class="col-sm-2">Manufacturing Date</dt>
            <dd class="col-sm-10">@Model.ManufacturingDate.ToString("yyyy-MM-dd")</dd>
        </dl>
        <a asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-warning">Chỉnh sửa sản phẩm</a>
    </div>
}
else
{
    <div>No product found.</div>
}
